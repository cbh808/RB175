<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
</head>

<body>
      <div id="main">
        <div class="header">
          <h1><%= @title %></h1>
        </div>

        <div class="content">
            <ul>
              <% @files.each do |file| %>
                <li>
                  <a href="<%= file %>"><%= file %></a>
                </li>
              <% end %>
            </ul>
        </div>

        <p>
          <% if params[:sort] == "desc" %>
            <a href="/">Sort ascending</a>
          <% else %>
            <a href="/?sort=desc">Sort descending</a>
          <% end %>
        </p>

      </div>
</body>
</html>